<mvc:View controllerName="capllmui.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.suite.ui.commons"
    xmlns="sap.m" displayBlock="true" height="100%" width="100%">
    <Page title="{i18n>title}">
        <content>
            <FlexBox height="80%" justifyContent="Center">
                <VBox>
                    <c:Timeline content="{aiModel>/data}" groupBy="date" sortOldestFirst="true" enableDoubleSided="true" showHeaderBar="false" showIcons="false">
                        <c:content>
                            <c:TimelineItem dateTime="{aiModel>date}" text="{aiModel>text}" userName="{aiModel>name}"/>
                        </c:content>
                    </c:Timeline>
                </VBox>
            </FlexBox>

            <FlexBox height="20%" alignItems="End" justifyContent="Center">
                <VBox width="100%">
                    <FeedInput width="100%" post="onPost" showIcon="false" />
                </VBox>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
