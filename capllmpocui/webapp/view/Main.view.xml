<mvc:View controllerName="capllmpocui.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.suite.ui.commons"
    xmlns="sap.m" displayBlock="true">
    <Page title="{i18n>title}" enableScrolling="false">
        <content>
            <Panel height="85%" backgroundDesign="Transparent">
                <c:Timeline content="{aiModel>/data}" groupBy="date" sortOldestFirst="true" enableDoubleSided="true" showHeaderBar="false" showIcons="false">
                    <c:content>
                        <c:TimelineItem dateTime="{aiModel>date}" text="{aiModel>text}" userName="{aiModel>name}"/>
                    </c:content>
                </c:Timeline>
            </Panel>
            <Panel height="15%">
                <FeedInput post="onPost" showIcon="false" />
            </Panel>
        </content>
    </Page>
</mvc:View>